{% if card_product and card_product != empty %}
  <div class="card-wrapper product-card-wrapper underline-links-hover">
    <div class="slider">
      {% if card_product.featured_media %}
        <div class="card__media{% if image_shape and image_shape != 'default' %} shape--{{ image_shape }} color-{{ settings.card_color_scheme }} gradient{% endif %}">
          <div class="media media--transparent media--hover-effect">
            <div class="slider-container">
              <div class="slider-item">
                <img src="{{ card_product.featured_media | image_url: width: 533 }}" alt="{{ card_product.featured_media.alt | escape }}">
              </div>
              {% for media in card_product.media %}
                {% if media != null and show_secondary_image %}
                  <div class="slider-item">
                    <img src="{{ media | image_url: width: 533 }}" alt="">
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <button class="popup-open button" data-id="{{ card_product.id }}">Popup</button>
          </div>
        </div>
      {% endif %}
      <div class="product-card-content">
        <!-- Your card content here -->
      </div>
    </div>
    <!-- Popup Container -->
    <div class="popup-container" id="popup-{{ card_product.id }}">
      <!-- Your popup container content here -->
    </div>
  </div>

